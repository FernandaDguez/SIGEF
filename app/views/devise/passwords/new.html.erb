<!-- Forgot your password? -->

<div class="welcome-banner">
  <h1>SIGEF</h1>
</div>

<% if notice %>
  <p class="alert alert-primary"><%= notice %></p>
<%end%>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<%end%> 

<div class="inicio-sesion">
<h2>¿Olvidaste tu contraseña?</h2>
<br>
<p>Introduce tu correo y enviaremos las intrucciones para recuperar tu contraseña</p>
<br>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= label_tag(type: 'tag') do %>
    <i class="icon-ok icon-white"></i> Email
    <% end %>
    <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
  </div>
  <br>


   <div>
      <%= button_tag(type: 'submit', class: "btn btn-outline-secondary") do %>
        <i class="icon-ok icon-white"></i> Enviar
      <% end %>
   </div>

   <br>
<% end %>

<%= render "devise/shared/links" %>
</div>
