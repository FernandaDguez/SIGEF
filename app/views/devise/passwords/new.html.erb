<!-- Page content -->
<div class="w3-container">

  <div class="container-fluid" style="margin-top: 43px;">
    <div class="jumbotron jumbotron-fluid"">
      <div class="container">
        <h1>Bienvenido al sistema de GAPCO</h1>
        <p>Gestión de Acreditación del Programa CONAIC</p>
        <br>
    </div>
  </div>
</div>

<div class="container">
<h2>¿Olvidaste tu contraseña?</h2>
<p>Introduce tu correo y enviaremos las intrucciones para recuperar tu contraseña</p>



<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= label_tag(type: 'tag') do %>
    <i class="icon-ok icon-white"></i> Email
    <% end %>
    <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email",  :style => "width:70%" %>
  </div>
  <br>


   <div>
      <%= button_tag(type: 'submit', class: "btn btn-outline-secondary") do %>
        <i class="icon-ok icon-white"></i> Enviar
      <% end %>
   </div>

   <br>
<% end %>

<%= render "devise/shared/links" %>
</div>